# Application
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Shifa AlHind"

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/shifa_alhind?schema=public"

# Authentication (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-min-32-chars-change-in-production

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=shifa-alhind-media
NEXT_PUBLIC_CDN_URL=https://your-cdn-url.cloudfront.net

# Email (SendGrid or SMTP)
EMAIL_FROM=noreply@shifaalhind.com
EMAIL_SERVER_HOST=smtp.sendgrid.net
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=apikey
EMAIL_SERVER_PASSWORD=your-sendgrid-api-key
SENDGRID_API_KEY=your-sendgrid-api-key

# WhatsApp (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886
NEXT_PUBLIC_SUPPORT_WHATSAPP=+971501234567

# Search (Algolia or Meilisearch)
NEXT_PUBLIC_ALGOLIA_APP_ID=your-app-id
ALGOLIA_ADMIN_API_KEY=your-admin-api-key
NEXT_PUBLIC_ALGOLIA_SEARCH_API_KEY=your-search-api-key
ALGOLIA_INDEX_PREFIX=shifa_alhind_

# Alternatively, Meilisearch
MEILISEARCH_HOST=http://localhost:7700
MEILISEARCH_API_KEY=your-meilisearch-master-key

# Analytics & SEO
# Google Analytics 4 - Get from https://analytics.google.com
# See GOOGLE_ANALYTICS_SETUP_COMPLETE.md for detailed setup instructions
# Required for tracking page views, conversions, and user behavior
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# Google Tag Manager (optional - only if you want advanced tracking)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX
# Microsoft Clarity - Free heatmaps and session recordings
# Get from https://clarity.microsoft.com (completely free, no limits)
# Provides click heatmaps, scroll maps, and session recordings
NEXT_PUBLIC_CLARITY_ID=your-clarity-project-id

# Search Engine Verification (for SEO)
# Get from Google Search Console after adding property
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=your-google-verification-code
# Get from Bing Webmaster Tools after adding property
NEXT_PUBLIC_BING_VERIFICATION=your-bing-verification-code
# Optional: Yandex verification
NEXT_PUBLIC_YANDEX_VERIFICATION=your-yandex-verification-code

# Monitoring
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# OpenAI (for SEO suggestions)
OPENAI_API_KEY=sk-your-openai-api-key

# Cloudinary (alternative to S3) - Image Upload
# Get these from https://cloudinary.com/console
# See CLOUDINARY_SETUP_GUIDE.md for detailed instructions
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=shifa-alhind
# Optional (only needed for server-side operations)
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Video conferencing
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret

# Geolocation
IPAPI_KEY=your-ipapi-key

# Rate limiting
UPSTASH_REDIS_REST_URL=your-upstash-redis-url
UPSTASH_REDIS_REST_TOKEN=your-upstash-redis-token

# Feature flags
NEXT_PUBLIC_ENABLE_BOOKING=true
NEXT_PUBLIC_ENABLE_TELECONSULT=true
NEXT_PUBLIC_PUBLISH_IMMEDIATELY=false
